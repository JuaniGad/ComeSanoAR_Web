<div>
  <h1>Register</h1>
  {{#if error}}
    <p>{{error}}</p>
  {{/if}}
  <form method="post" action="/admin/login/registerup">
    <label>
      Email:
      <input type="text" name="usuario" required />
    </label>
    <br />
    <label>
      Password:
      <input type="password" name="password" required />
    </label>
    <br />
    <button type="submit">Register</button>
  </form>
</div>